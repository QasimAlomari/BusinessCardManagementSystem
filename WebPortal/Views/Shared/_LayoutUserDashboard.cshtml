<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Admin Dashboard</title>
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link href="~/admindashboardfiles/css/dashboard.css" rel="stylesheet" />
    <!-- jQuery (required) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    <!-- jQuery Confirm CSS -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.4/jquery-confirm.min.css">

    <!-- jQuery Confirm JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-confirm/3.3.4/jquery-confirm.min.js"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />
    <link href="~/admindashboardfiles/css/cards/cards.css" rel="stylesheet" />
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <!-- jQuery Toast CSS -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.css" rel="stylesheet" />

    <!-- jQuery Toast JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-toast-plugin/1.3.2/jquery.toast.min.js"></script>


</head>
<body>

    <div class="sidebar" id="sidebar">
        <h2>User Panel</h2>
        <ul>
            <li onclick="location.href='/UserDashboard/Index'">
                <i class="fas fa-home"></i>Dashboard
            </li>
            <li style="cursor: pointer;" onclick="Logout()">
                <i class="fas fa-sign-out-alt"></i> Logout
            </li>
        </ul>
    </div>
    <div class="main-content" id="mainContent">
        <div class="topbar">
            <span class="toggle-btn" onclick="toggleSidebar()">
                <i class="fas fa-bars"></i>
            </span>
            <h3>
                <span>Welcome, </span>
                <span id="welcomeUser" style="color: #117a65; display: inline;"></span>
            </h3>
        </div>
        <div>
            @RenderBody()
        </div>
    </div>
    <script src="~/jscommon/callactions.js"></script>
    <script src="~/jsshared/logout.js"></script>
    <script src="~/admindashboardfiles/js/dashboard.js"></script>
    <!-- SweetAlert2 -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script src="~/jsadmin/admindashboard.js"></script>
    <script src="~/jscommon/mainmaster.js"></script>
    <script>
        $(document).ready(function () {
            var username = localStorage.getItem("username");
            console.log(username);
            if (username) {
                $("#welcomeUser").text(username);
            } else {
                $("#welcomeUser").text("Guest");        
            }
        });
    </script>
</body>
</html>
